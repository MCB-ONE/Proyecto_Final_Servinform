{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Token": {
    "Key": "Esta es la Key de FacturApp Token",
    "Issuer": "http://localhost:7261"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=FacturAppDB;Trusted_Connection=True;",
    "SecurityConnection": "Server=localhost\\SQLEXPRESS;Database=FacturAppSecurityDB;Trusted_Connection=True;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.txt",
          "rolllingInterval":  "Day"
        }     
      }
    ]
  }
}
